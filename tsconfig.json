{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "twine-sugarcube"],
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "paths": {
      "@dynamic-module:*": ["./src/dynamic-modules/*"]
    },
    "outDir": "src",
    "rootDir": "src"
  },
  "references": [{ "path": "./jsconfig.node.json" }],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "src/modules"
    //"src/scripts/lib"
  ]
}
