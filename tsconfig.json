{
    "compilerOptions": {
        "noEmit": true,
        "target": "esnext",
        "module": "es2020",
        "moduleResolution": "node",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "types": ["vite/client"],
        "checkJs": true,
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "paths": {
          "@dynamic-module:*": ["./src/dynamic-modules/*"]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "src/modules",
        "src/scripts/lib",
        "src/devtool/third-party"
    ]
}